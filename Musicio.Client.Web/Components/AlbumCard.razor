@inject NavigationManager NavigationManager

<div class="playlist-container">
    <a @onclick="@(() => ViewAlbum())">
        @if (Image == null)
        {
            <div class="playlist-image" style="background-image: url(images/StockImage.jpg)"></div>
        }
        else
        {
            <div class="playlist-image" style="background-image: url(@($"/album/images/{Image}"))"></div>
        }
        <div class="playlist-title">@Title</div>
    </a>
</div>

@code {
    [Parameter]
    public int ArtistId { get; set; }

    [Parameter]
    public int AlbumId { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Image { get; set; }

    private Task ViewAlbum()
    {
        NavigationManager.NavigateTo("/artists/" + ArtistId + "/" + AlbumId);

        return Task.CompletedTask;
    }
}